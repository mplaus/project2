<!DOCTYPE html>
<html>
    <head>
        <title>Update User</title>
        <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css"/>
        <link rel="stylesheet" type="text/css" href="/css/myStyle.css"/>
        <script src="/js/jquery-1.12.2.min.js"></script>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6"><img class="logo" src="/img/coco-cafe-logo.jpg"/></div>
                <div class="col-md-3"></div>
            </div>
        
            <div class="row">
                <div class="col-md-10">
                    <div class = "row">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-1"></div>
                                <div class="col-md-10">
                                    <div class="row">
                                        <h3><%= user.name %></h3>
                                    </div>
                                    <div class = "row">
                                        <form action="/users/<%= user.identity %>" method="POST">
                                                <div class="form-group">
                                                <label>Identification Number</label>
                                                <input type="text" id="identity" class="form-control" name="identity" value="<%= user.identity %>" />
                                                </div>
                                    
                                                <div class="form-group">
                                                <label>Name</label>
                                                <input type="text" id="name" class="form-control" name="name" value="<%= user.name %>" />
                                                </div>
                                                
                                                <div class="form-group">
                                                <label for="sell" >Favorite Type of Coffee</label>
                                                <select type="text" id="coffee sell" class="form-control" name="coffee" value="<%= user.coffee %>">
                                                    <option>Brewed Coffee</option>
                                                    <option>Espresso</option>
                                                    <option>Cappuccino</option>
                                                    <option>Café Latte</option>
                                                    <option>Turkish Coffee</option>
                                                    <option>Coffé Macchiato</option>
                                                    <option>Americano</option>
                                                </select>
                                                </div>
                                    
                                                <div class="form-group">
                                                <label>Email</label>
                                                <input type="text" id="email" class="form-control" name="email" value="<%= user.email %>" />
                                                </div>
                                    
                                                <div class="form-group">
                                                <label>Job</label>
                                                <input type="text" id="job" class="form-control" name="job" value="<%= user.job %>" />
                                                </div>
                                
                                                <input type="submit" class="btn btn-default" value="Update" />
                                        </form>
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>