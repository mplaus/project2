<!DOCTYPE html>
<html>
    <head>
        <title>Home Page</title>
        <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css"/>
        <link rel="stylesheet" type="text/css" href="/css/myStyle.css"/>
        <script src="/js/jquery-1.12.2.min.js"></script>
    </head>
    <body>
        <script> 
        $(document).ready(function(){
            $("#flip").click(function(){
                $("#panel").slideToggle("slow");
            });
        });
        </script>
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6"><img class="logo" src="/img/coco-cafe-logo.jpg"/></div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <h3 class="headings">Customer List</h3>
                            <% if (users.length) { %>
                            <% for (var i in users) { %>
                     <div class="panel panel-default">
                        <div class="panel-heading customer-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <span class="headings">Customer Number: </span><span href="/users/<%= users[i].identity %>"><%= users[i].identity %></span>
                                </div>
                                <div class="col-md-3">
                                    <span class="headings">Name: </span><span href="/users/<%= users[i].name %>"><%= users[i].name %></span>
                                </div>
                                <div class="col-md-4">
                                    <span class="headings">Email: </span><span href="/users/<%= users[i].email %>"><%= users[i].email %></span>
                                </div>
                                <div class = "col-md-1">
                                    <a href="/users/new"><span class="glyphicon glyphicon-plus my-glyphs"></span></a>
                                </div>
                            </div>
                        </div>
                        
                           
                
                        <div id="flip<% users[i].identity %>" class= "list-group">
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p href="/users/<%= users[i].coffee %>"><%= users[i].coffee %></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p href="/users/<%= users[i].job %>"><%= users[i].job %></p>
                                        <p href="/users/<%= users[i].adress %>"><%= users[i].address %></p>
                                        <p href="/users/<%= users[i].city %>"><%= users[i].city %></p>
                                        <p href="/users/<%= users[i].zip %>"><%= users[i].zip %></p>
                                        <p href="/users/<%= users[i].notes %>"><%= users[i].notes %></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2">
                                        <a href="/user/delete/<%= users[i].identity %>"><span class="glyphicon glyphicon-trash my-glyphs"></span></a>
                                    </div>
                                    <div class="col-md-8"></div>
                                    <div class="col-md-2">
                                        <a href="/users/<%= users[i].identity %>"><input  type="submit" class="btn btn-default" value="Edit" /></a>
                                    </div>
                                </div>
                                
                            </li>
                        </div>
                    </div>
                   
                            <% } %>
                            <% } else { %>
                            <a href="/users/new"><input type="submit" class="btn btn-default my-button" value="Add Clients" /></a>
                            <% } %>
                     </div>
                </div>
                <div class="col-md-1 side-bars"></div>
            </div>
        </div>
    </body>
</html>