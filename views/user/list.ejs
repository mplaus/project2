<!DOCTYPE html>
<html>
    <head>
        <title>Home Page</title>
        <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css"/>
        <link rel="stylesheet" type="text/css" href="/css/myStyle.css"/>
        <script src="/js/jquery-1.12.2.min.js"></script>
    </head>
    <body>
        <script> 
        $(document).ready(function(){
            $("#flip").click(function(){
                $("#panel").slideToggle("slow");
            });
        });
        </script>
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6"><img class="logo" src="/img/coco-cafe-logo.jpg"/></div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <h3>Customer List</h3>
                            <% if (users.length) { %>
                            <% for (var i in users) { %>
                     <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-md-4">
                                    <span>Customer Number: </span><span href="/users/<%= users[i].identity %>"><%= users[i].identity %></span>
                                </div>
                                <div class="col-md-3">
                                    <span>Name: </span><span href="/users/<%= users[i].name %>"><%= users[i].name %></span>
                                </div>
                                <div class="col-md-4">
                                    <span>email: </span><span href="/users/<%= users[i].email %>"><%= users[i].email %></span>
                                </div>
                                <div class = "col-md-1">
                                    <a href="/users/new"><span class="glyphicon glyphicon-plus my-glyphs"></span></a>
                                </div>
                            </div>
                        </div>
                        
                           
                
                        <div id="flip<% users[i].identity %>" class= "list-group">
                            <li class="list-group-item">
                                
                                <p href="/users/<%= users[i].job %>"><%= users[i].job %></p>
                                <p href="/users/<%= users[i].email %>"><%= users[i].email %></p>
                                <p href="/users/<%= users[i].coffee %>"><%= users[i].coffee %></p>
                                <a href="/user/delete/<%= users[i].identity %>"><span class="glyphicon glyphicon-trash my-glyphs"></span></a>
                                <a href="/users/<%= users[i].identity %>"><input  type="submit" class="btn btn-default" value="Edit" /></a>
                                
                            </li>
                        </div>
                   
                            <% } %>
                            <% } else { %>
                            <p>Add Clients</p>
                            <% } %>
                     </div>
                </div>
                <div class="col-md-1 side-bars"></div>
            </div>
        </div>
    </body>
</html>